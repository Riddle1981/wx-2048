}
.cover{
  width: 640rpx;
  border-radius: 10rpx;
  height: 640rpx;
  left: 50%;
  font-size: 72rpx;
  color: rgba(236, 228, 219, 1);
  transform: translateX(-50%);
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 5;
  background:rgba(121, 114, 103,0.8);
  text-align:center;
}
.next{
  border-radius: 10rpx;
  width: 300rpx;
  height: 100rpx;
  font-size: 48rpx;
  line-height: 100rpx;
  color: rgba(121, 114, 103,0.8);
  margin-top: 20rpx;
  vertical-align: middle;
  text-align: center;
  background: rgba(236, 225, 212, 0.7);
}