  height: 70rpx;
  line-height: 70rpx;
  vertical-align: middle;
  color: rgba(250, 248, 240, 1);
  margin-top: 4rpx;
  text-align: center;
  background: rgba(121, 114, 103,0.5);
}
.scoreInfo{
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 60%;
}
.score{
  background: rgba(184, 173, 161, 1); 
  text-align: center;
  color: rgba(236, 228, 219, 1);
  width: 180rpx;
  height: 110rpx;
  border-radius: 10rpx;
}
.record{
  color: #ffffff;
}
.content{
  width: 640rpx;
  position: relative;
  border-radius: 10rpx;
  height: 640rpx;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 80rpx;
  background: rgb(202, 193, 181);
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}
.box{
  border-radius: 10rpx;
  width: 140rpx;
  height: 140rpx;
  background: rgba(184, 173, 161, 1);
  color: #ffffff;
  line-height: 140rpx;
  text-align: center;
  font-weight: 700;
  font-size: 48rpx;
  animation: all 1s linear
}
.graw{
  color: rgb(121, 114, 103);
}
