page{
  background: rgba(250, 248, 240, 1);
  width: 100vw;
  height: 100vh;
}
button{
  width: 350px;
  height: 50px;
}
.game{
  position: relative;
}
.info{
  height: 240rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.userName{
  font-size: 46rpx;
  font-weight: 700;
  width: 40%;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.again{
